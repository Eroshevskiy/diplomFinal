<Application x:Class="tekstil_profi_m.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:tekstil_profi_m"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FFE2D2D2" />
            <!-- Другие свойства стиля для хедера столбца -->
        </Style>

        <Style TargetType="Border" x:Key="RoundedBorderStyle">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="5"/>
            
        </Style>


    </Application.Resources>
</Application>
